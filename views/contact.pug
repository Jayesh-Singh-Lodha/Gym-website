extends base.pug

block scripts
block style
  link(rel='stylesheet', href='/static/style.css')
  link(rel='stylesheet', href='/static/contact_sty.css')

block content 
    section#form-container
        h1  Contact us
        form(action="/contact",method="post")
            input(type="text",class="inp_name",placeholder="Enter your name",name="name")
            input(type="phone",class="inp_name",placeholder="Enter your phone number",name="phone")
            input(type="email",class="inp_name",placeholder="Enter your email",name="email")
            input(type="text",class="inp_name",placeholder="Enter your address",name="address")
            input(type="text",class="inp_name",placeholder="Enter your feedback",name="feedback")     
            button#btn Submit
